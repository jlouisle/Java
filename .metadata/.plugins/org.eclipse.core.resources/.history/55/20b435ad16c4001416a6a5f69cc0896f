package main;

public class Animal {
	private String name;
	private int weight;
	private AnimalType anTy;
	private Treatment[] treatments;
	
	private void addTreatment(Treatment n){
		this.treatments[treatments.length] = n;
	}
	
	public Animal(String name, int weight, AnimalType v) {
		super();
		this.name = name;
		this.weight = weight;
		this.anTy = v;
	}
	
	@Override
	public int hashCode() {
		final int prime = 31;
		int result = 1;
		result = prime * result + ((name == null) ? 0 : name.hashCode());
		result = prime * result + ((anTy == null) ? 0 : anTy.hashCode());
		result = prime * result + weight;
		return result;
	}

	@Override
	public String toString() {
		return anTy + " " + name + ", price: " + "" +" USD";
	}

	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public int getWeight() {
		return weight;
	}
	public void setWeight(int weight) {
		this.weight = weight;
	}
	public AnimalType getV() {
		return anTy;
	}
	public void setV(AnimalType v) {
		this.anTy = v;
	}
	
	
	
	

}
