package main;

public class Animal {
	private String name;
	private int weight;
	private AnimalType aTy;
	private Treatment[] treatments;
	
	private void addTreatment(String n){
		treatments[treatments.length] = n;
	}
	
	public Animal(String name, int weight, AnimalType v) {
		super();
		this.name = name;
		this.weight = weight;
		this.aTy = v;
	}
	
	@Override
	public int hashCode() {
		final int prime = 31;
		int result = 1;
		result = prime * result + ((name == null) ? 0 : name.hashCode());
		result = prime * result + ((aTy == null) ? 0 : aTy.hashCode());
		result = prime * result + weight;
		return result;
	}

	@Override
	public String toString() {
		return aTy + " " + name + ", price: " + "" +" USD";
	}

	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public int getWeight() {
		return weight;
	}
	public void setWeight(int weight) {
		this.weight = weight;
	}
	public AnimalType getV() {
		return aTy;
	}
	public void setV(AnimalType v) {
		this.aTy = v;
	}
	
	
	
	

}
